<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Scene -->
	<bean id="visualSceneView" scope="prototype" class="com.se.simplicity.editor.view.scene.visual.VisualSceneView" factory-method="getDoubleBufferedSceneView" />
	
	<!-- Outline -->
	<bean id="outlineViewFactory" class="com.se.simplicity.editor.view.outline.OutlineViewFactory" />
	<bean id="outlineView" scope="prototype" class="org.eclipse.swt.widgets.Tree" factory-bean="outlineViewFactory" factory-method="getOutlineView" />

</beans>